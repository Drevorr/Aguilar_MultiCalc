<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MenuGeometry">

    <Button
        android:id="@+id/btnSphere"
        android:layout_width="221dp"
        android:layout_height="61dp"
        android:layout_marginTop="48dp"
        android:text="SPHERE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCapsule" />

    <Button
        android:id="@+id/btnCone"
        android:layout_width="221dp"
        android:layout_height="61dp"
        android:layout_marginTop="88dp"
        android:text="CONE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCylinder"
        android:layout_width="221dp"
        android:layout_height="61dp"
        android:layout_marginTop="48dp"
        android:text="CYLINDER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSphere" />

    <Button
        android:id="@+id/btnCapsule"
        android:layout_width="221dp"
        android:layout_height="61dp"
        android:layout_marginTop="48dp"
        android:text="CAPSULE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCone" />

    <Button
        android:id="@+id/btnBackGeo"
        android:layout_width="144dp"
        android:layout_height="57dp"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCylinder"
        app:layout_constraintVertical_bias="0.292" />
</androidx.constraintlayout.widget.ConstraintLayout>